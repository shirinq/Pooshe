<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#5C5C5C</item>
        <item name="fontFamily">@font/iran_yekan_black</item>
    </style>

    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"></style>

    <style name="ProgressButton" parent="Widget.MaterialComponents.Button">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#fff</item>
        <item name="android:topRightRadius">200dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="font">@font/iran_yekan_black</item>
    </style>

    <style name="LoginButton" parent="Widget.MaterialComponents.Button">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#fff</item>
        <item name="backgroundTint">#FFAB40</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="IdentityCard" parent="ProgressButton">
        <item name="backgroundTint">#10A365</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="IdentityPaper" parent="ProgressButton">
        <item name="backgroundTint">#FFFF00</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Bill" parent="ProgressButton">
        <item name="backgroundTint">#D50000</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Certificate" parent="ProgressButton">
        <item name="backgroundTint">#969BB6</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Exit" parent="ProgressButton">
        <item name="backgroundTint">#CF5F85</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="LoginCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#fff</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">3dp</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>